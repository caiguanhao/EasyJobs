= render 'menu'

%table.list
  %thead
    %tr
      %th ID
      %th Name
      %th.server Server
      %th.date Updated at
  %tfoot
    %tr
      %td{ colspan: 4 }
        .table-pager
          <a href="#" class="table-pager-link prev">Previous</a>
          <a href="#" class="table-pager-link next">Next</a>
        = pluralize(@jobs.size, "job")
  %tbody
    - @jobs.each do |job|
      %tr
        %td= job.id
        %td
          = link_to job.name, job
          %span.interpreter
            = job.interpreter.try(:path).presence || "Script"
        %td.server
          = link_to job.server.name, server_path(job.server) unless job.server.nil?
        %td.date= job.updated_at
