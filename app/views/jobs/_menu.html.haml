#submenu.button_group
  = link_to jobs_path, class: "button button-list#{active_action? %w(index)}" do
    %span.icon= t('Listing_Jobs')
  - job_id = @job.try(:id)
  - job_id = session[:job_id] if job_id.nil? and session[:job_id].present?
  - if job_id.present?
    = link_to job_path(job_id), class: "button button-details#{active_action? %w(show)}" do
      %span.icon= t('Job_Details')
    = link_to edit_job_path(job_id), class: "button button-edit#{active_action? %w(edit update)}" do
      %span.icon= t('Edit_Job')
    = link_to delete_job_path(job_id), title: t('Delete_Job'), class: "button button-delete button-red delete#{active_action? %w(delete)}" do
      %span.icon
  = link_to new_job_path, class: "button button-new button-green#{active_action? %w(new create)}" do
    %span.icon= t('New_Job')
.menu_div
