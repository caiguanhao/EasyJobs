#submenu.button_group
  = link_to 'Listing Jobs', jobs_path, class: "button" + (active_action? %w(index))
  - job_id = @job.try(:id)
  - job_id = session[:job_id] if job_id.nil? and session[:job_id].present?
  - if job_id.present?
    = link_to 'Job Details', job_path(job_id), class: "button" + (active_action? %w(show))
    = link_to 'Edit Job', edit_job_path(job_id), class: "button" + (active_action? %w(edit update))
    = link_to delete_job_path(job_id), class: "button button-red delete#{active_action? %w(delete)}" do
      %span.icon Delete
  = link_to 'New Job', new_job_path, class: "button button-green" + (active_action? %w(new create))
.menu_div
