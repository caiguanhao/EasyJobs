= form_for @job do |f|
  - if @job.errors.any?
    #error_explanation
      %h2= "#{pluralize(@job.errors.count, "error")} prohibited this job from being saved:"
      %ul
        - @job.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    %br
    = f.text_field :name
  .field
    = f.label :interpreter
    = f.collection_select :interpreter, Job::Interpreters, :to_s, :to_s, include_blank: "(default)"
  .field
    = f.label :script
    %br
    = f.text_area :script, size: "80x10"
  .field
    = f.label :server_id
    = f.collection_select :server_id, Server.all, :id, :name, include_blank: "(none)"
  .actions
    = f.submit 'Save', class: "button button-green"
