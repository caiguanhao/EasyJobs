#submenu.button_group
  = link_to t('Listing_Servers'), servers_path, class: "button" + (active_action? %w(index))
  - server_id = @server.try(:id)
  - server_id = session[:server_id] if server_id.nil? and session[:server_id].present?
  - if server_id.present?
    = link_to t('Server_Details'), server_path(server_id), class: "button" + (active_action? %w(show))
    = link_to t('Edit_Server'), edit_server_path(server_id), class: "button" + (active_action? %w(edit update))
    = link_to delete_server_path(server_id), title: t('Delete_Server'), class: "button button-red delete#{active_action? %w(delete)}" do
      %span.icon
  = link_to t('New_Server'), new_server_path, class: "button button-green" + (active_action? %w(new create))
.menu_div
