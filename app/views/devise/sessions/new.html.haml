= form_for(resource, :as => resource_name, :url => session_path(resource_name), html: { novalidate: '' } ) do |f|
  .panel
    %h3= f.label :login
    .pc= f.email_field :login, autofocus: true
  .panel
    %h3= f.label :password
    .pc= f.password_field :password
  .panel
    %h3= f.label :auth_code, t('Google_Authenticator_Code')
    .pc= f.number_field :auth_code, autocomplete: :off
  = f.check_box :remember_me
  = f.label :remember_me
  .separator
  .actions
    = f.submit t('Sign_In'), class: "button button-green"

