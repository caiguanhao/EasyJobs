.menu_div

= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
  .panel
    %h3= f.label :login
    .pc= f.text_field :login, autofocus: true
  .panel
    %h3= f.label :password
    .pc= f.password_field :password
  = f.check_box :remember_me
  = f.label :remember_me
  .separator
  .actions
    = f.submit 'Sign In', class: "button button-green"
