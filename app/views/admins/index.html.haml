= render 'menu'

%table.list
  %thead
    %tr
      %th ID
      %th Username
      %th Email
      %th.date Last Sign In At
  %tfoot
    %tr
      %td{ colspan: 4 }
        = pluralize(@admins.size, "admin")
  - @admins.each do |admin|
    %tr
      %td= admin.id
      %td= link_to admin.username, admin
      %td= admin.email
      %td.date= admin.last_sign_in_at.presence || "(n/a)"
