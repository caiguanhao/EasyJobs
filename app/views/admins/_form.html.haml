= form_for @admin do |f|
  - if @admin.errors.any?
    #error_explanation
      %h2= t('error.admin', count: @admin.errors.count)
      %ul
        - @admin.errors.full_messages.each do |msg|
          %li= msg
  .panel
    %h3= f.label :username
    .pc= f.text_field :username, autofocus: true
  .panel
    %h3= f.label :email
    .pc= f.text_field :email
  - if @admin.id
    .panel
      %h3= f.label :password
      .pc= f.password_field :password, placeholder: t('leave_blank_if_no_changes')
    .panel
      %h3= t('Google_Authenticator_QRCode')
      .pc= generate_google_authenticator_qrcode_for_admin @admin
  -else
    .panel
      %h3= f.label :password
      .pc= f.password_field :password
  .separator
  .actions
    = f.submit t('Save'), class: "button button-green"
